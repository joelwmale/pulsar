{
  "name": "pulsar",
  "version": "1.0.0",
  "description": "A local SMTP mail server for development - capture and view emails in a beautiful desktop app",
  "main": "dist-electron/main/index.js",
  "author": "Joel Male",
  "license": "MIT",
  "private": false,
  "keywords": [
    "smtp",
    "mail-server",
    "email",
    "development",
    "electron",
    "laravel",
    "local-mail"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && electron-builder",
    "build:renderer": "vite build",
    "build:main": "tsc -p tsconfig.main.json",
    "preview": "vite preview",
    "electron": "electron .",
    "electron:dev": "electron-vite dev",
    "package": "electron-builder --dir",
    "package:all": "electron-builder -mwl",
    "postinstall": "electron-rebuild"
  },
  "dependencies": {
    "better-sqlite3": "^9.2.2",
    "mailparser": "^3.6.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "smtp-server": "^3.13.2"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "@types/node": "^20.10.6",
    "@types/react": "^18.2.47",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "electron-rebuild": "^3.2.9",
    "electron-vite": "^2.0.0",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.11",
    "vite-plugin-electron": "^0.28.2",
    "vite-plugin-electron-renderer": "^0.14.5"
  },
  "build": {
    "appId": "com.pulsar.mail",
    "productName": "Pulsar",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Development"
    }
  }
}
